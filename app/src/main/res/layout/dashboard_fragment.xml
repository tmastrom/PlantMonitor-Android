<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dashboard_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.dashboard">


        <TextView
            android:id="@+id/title_text"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="242dp"
            android:layout_height="68dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="128dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/fauna_one"
            android:foregroundTint="#389E42"
            android:shadowColor="#703D3D"
            android:text="Plant Monitor"
            android:textSize="38sp"
            app:autoSizeTextType="uniform"
            app:drawableTint="#376E2A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timestamp_temperature2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="2020-06-11 09:24"
            app:layout_constraintEnd_toEndOf="@+id/title_text"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <androidx.cardview.widget.CardView
            android:id="@+id/humidity_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/cardBackground"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4D67A">

                <ImageView
                    android:id="@+id/water_icon"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="18dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_water_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/humidity_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/humidity_label"
                    style="@style/data_title"
                    android:layout_width="161dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fauna_one"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Soil Humidity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.272"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/humidity_value"
                    style="@style/value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="50%"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.517"
                    app:layout_constraintStart_toEndOf="@+id/humidity_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    app:layout_constraintEnd_toEndOf="@+id/humidity_value"
                    app:layout_constraintStart_toStartOf="@+id/humidity_value"
                    app:layout_constraintTop_toBottomOf="@+id/humidity_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/cardView_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/temperature_cardView">

            <androidx.cardview.widget.CardView
                android:id="@+id/light_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardBackground"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pH_cardView"
                app:layout_constraintTop_toBottomOf="@+id/temperature_cardView">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6CE39D"
                    android:backgroundTint="#AFEF93">

                    <TextView
                        android:id="@+id/light_title_text"
                        style="@style/data_title"
                        android:layout_width="57dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/fauna_one"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.304"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/sunlight_value"
                        style="@style/value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="2h 15m"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/light_title_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/light_icon"
                        android:layout_width="34dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_wb_sunny_24"
                        android:tint="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@id/light_title_text"
                        app:layout_constraintEnd_toStartOf="@+id/light_title_text"
                        app:layout_constraintTop_toTopOf="@id/light_title_text" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pH_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:backgroundTint="@color/cardBackground"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toStartOf="@id/light_cardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temperature_cardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E867C3">

                    <TextView
                        android:id="@+id/ph_value"
                        style="@style/value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:text="7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/ph_title_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ph_title_text"
                        style="@style/data_title"
                        android:layout_width="51dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/fauna_one"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="PH"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/temperature_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#93A4E3">

                <TextView
                    android:id="@+id/temperature_title_text"
                    style="@style/data_title"
                    android:layout_width="142dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fauna_one"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Temperature"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/temperature_value"
                    app:layout_constraintHorizontal_bias="0.116"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/temperature_icon"
                    android:layout_width="31dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_thermometer_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@id/temperature_title_text"
                    app:layout_constraintEnd_toStartOf="@+id/temperature_title_text"
                    app:layout_constraintTop_toTopOf="@id/temperature_title_text" />

                <TextView
                    android:id="@+id/temperature_value"
                    style="@style/value_text"
                    android:layout_width="76dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="60dp"
                    android:text="30Â°C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.485" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_wb_sunny_24"
            android:tint="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_thermometer_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:tint="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_water_grey600_18dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="123dp"
            android:layout_height="152dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/title_text"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hhh" />

        <Button
            android:id="@+id/button2"
            android:layout_width="101dp"
            android:layout_height="71dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            android:background="#FFFFFF"
            android:backgroundTint="#D2D3E3"
            android:drawableEnd="@drawable/ic_launcher_foreground"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>